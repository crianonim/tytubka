doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/tytubka/stylesheets/style.css')
  body
    div(class="inprogress")
     if __downloading.length
      span In progress:  
     each video in __downloading
      div
       a(href="/tytubka/cancel/"+video.id, class="delete") CANCEL 
       span #{video.progressPercent||0} % #{video.title} 
    block content
